@using TreeManager.Domain.Entities
@model IEnumerable<User>

@{
    ViewBag.Title = "User Management Panel";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        User Accounts
    </div>
    <table class="table table-striped">
        <tr><th>ID</th><th>Name</th><th>Email</th><th></th></tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center">No User Accounts</td></tr>
        }
        else
        {
            foreach(User user in Model)
            {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                <td>
                    @using (Html.BeginForm("Delete", "Users",
                    new { id = user.Id }))
                    {
                        @Html.ActionLink("Edit", "Edit", "Users", new { id = user.Id },
                        new { @class = "btn btn-primary btn-xs" })
                        <button class="btn btn-danger btn-xs"
                                type="submit">
                            Delete
                        </button>
                    }
                </td>
                </td>
            </tr>
            }
        }
    </table>
</div>
@Html.ActionLink("Create", "Create", null, new { @class = "btn btn-primary"})

