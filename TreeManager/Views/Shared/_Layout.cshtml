<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
        html, body {
            margin: 0px;
            padding: 0px;
        }

        .no-bullets {
            list-style-type: none;
        }

        .spacefier {
            line-height: 30px;
        }

        .spacefier-child {
            line-height: 20px;
        }

        .login-button {
            margin-right: 20px;
            margin-top: 5px;
        }

        .node {
            border-radius: 5px;
            display: inline-block;
            padding: 5px;
            margin: 5px;
            box-shadow: 5px 5px 10px grey;
            background-color: lightgreen;
            width: 250px;
            max-width: 250px;
            word-wrap: break-word;
        }

        .node-description {
            line-height: 15px;
        }
    </style>
</head>
<body>
    <!--pasek nawigacji-->
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Tree", "Tree")">Tree Manager</a>
            </div>
        </div>
        <ul class="nav navbar-nav navbar-right">
            @if (User.Identity.IsAuthenticated)
            {
                <li><span class="navbar-brand">Hello, @User.Identity.Name!</span></li>
                <li><a href="@Url.Action("Logout", "Account")"><span class="glyphicon glyphicon-log-out"></span> Sign Out</a></li>
            }
            else
            {
                <li><a href="@Url.Action("Create", "Users")"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                <li><a href="@Url.Action("Login", "Account")"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
            }
        </ul>
    </nav>
    <div>
        @RenderBody()
    </div>

    <script>
        //skrypt dla tooltipa
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });

        //skrypt dla przeciagania elementow
        $(".draggable").draggable({
            revert: true,
            zIndex: 9000
        });

        $(".droppable").droppable({
            drop: function (event, ui) {
                var objectData = {
                    element1: $(this).attr('id'),
                    element2: $(ui.draggable).attr('id')
                };

                var objectDataString = JSON.stringify(objectData);

                $.ajax({
                    type: "POST",
                    url: "NodeAdmin/SwapNode",
                    data: {
                        o: objectDataString
                    },
                    success: function () {
                        location.reload()
                    },
                    error: function (errorThrown) {
                        console.log(errorThrown)
                    }
                });
            }
            });
    </script>
</body>
</html>